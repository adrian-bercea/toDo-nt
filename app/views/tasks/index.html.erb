<p style="color: green"><%= notice %></p>
<% content_for :title, "Tasks" %>

<h1>Tasks</h1>
<h3><%= link_to "New task", new_task_path %></h3>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="task-card">
      <%= render task %>
      <p class="text-right">
        <%= link_to "Show this task", task %>
      </p>
    </div>
  <% end %>
</div>
